package com.akasia.investment.task;

import java.io.IOException;

import org.springframework.boot.configurationprocessor.json.JSONException;
import org.springframework.boot.configurationprocessor.json.JSONObject;
import org.springframework.core.env.Environment;

public class FocalService extends ApplicationService{
	private String host;
	private String accessToken;

	public FocalService(Environment environment, Company company) {
		super(environment, company);
		// TODO Auto-generated constructor stub
		this.host = company.getFocalHost();
		this.accessToken = company.getFocalAccessToken();
		JSONObject jsonInputObject = new JSONObject();  
		try {
			jsonInputObject.put("bank_id", "SSS");
			jsonInputObject.put("bank_name", "Service Bank");
			jsonInputObject.put("bank_name_ar", "Service Bank Arabic");
		} catch (JSONException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

        try {
			JSONObject jsonOutputObject = postObject("/bank", jsonInputObject);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (JSONException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}
	

}
